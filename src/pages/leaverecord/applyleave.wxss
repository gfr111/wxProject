/* pages/leaverecord/applyleave.wxss */

page{
  background-color: #F7F8F9;
}

.main_view{
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.main_view .time_view{
  margin: 0 0;
  height: auto;
  background-color: #fff;
  border-top: 20rpx solid #F7F8F9;
  border-bottom: 20rpx solid #F7F8F9;
}

.time_view .begin_view{
  margin: 0 30rpx;
  height: 172rpx;
  border-bottom: 2rpx solid #EFEFEF;
}

.time_view .end_view{
  margin: 0 30rpx;
  height: 172rpx;
}

.time_view .title{
  margin-top: 30rpx;
  color: #484848;
  font-size: 26rpx;
}

.time_view .picker{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 26rpx;
  font-size: 36rpx;
}

.main_view .reasonbg_view{
  margin: 0 0;
  height: 280rpx;
  background-color: #fff;
}

.reasonbg_view .reason_view{
  margin: 0 30rpx;
  height: 100%;
}

.reason_view .title_view{
  display: flex;
  justify-content: space-between;
}

.title_view .tit{
  margin-top: 30rpx;
  color: #484848;
  font-size: 26rpx;
}

.title_view .num{
  margin-top: 30rpx;
  color: #C8C7CD;
  font-size: 26rpx;
}

.reason_view .reason{
  margin-top: 26rpx;
  color: #303030;
  font-size: 36rpx;
}

.reason_view .place{
  color: #C8C7CD;
}

.main_view .foot_view{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  border-top: 2rpx solid #E5E5E5;
}

.foot_view .commit_view{
  margin: 24rpx 30rpx;
  height: 72rpx;
  line-height: 72rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  font-weight: 500;
  border-radius: 40rpx;
}