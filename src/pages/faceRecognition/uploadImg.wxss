/* pages/faceRecognition /faceRecognition .wxss */
.uploadBox{
  width: 100%;
  height: 100%;
  background: #ffffff;
}
.tipBox{
  width: 100%;
  height: 48rpx;
  background: rgba(242, 229, 213, 0.9);
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: absolute;
  top:0px;
  z-index: 2;
}
.tipBox>span{
  color: #303030;
  font-size: 24rpx;
  margin-left: 20rpx;
}
.tipBox>image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
}
.uploadContent{
  height: 100%;
}
.photoBox{
  text-align: center;
  padding-top:15%;
}
.photoBox>image{
  width: 450rpx;
  height: 450rpx;
  margin-bottom: 80rpx;
}
.considerationsBox{
  display: flex;
  flex-direction: column;
  margin-left: 20%;
}
.considerationsBox>span{
  color: #5F5F5F;
  font-size: 28rpx;
}
.considerationsBox>span:nth-child(1){
  color: #282828;
  font-size: 44rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}
.camera{
  text-align: center;
}
.camera>image{
  width: 160rpx;
  height: 160rpx;
  margin-top: 12%;
}
.submitBtn{
  margin-top: 10%;
  display: flex;
  align-items:center;
  flex-direction: column;
}
.toCompare{
  width: 430rpx;
  line-height: 100rpx;
  background: #00BC71;
  text-align: center;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 100rpx;
}
.rePhoto{
  width: 430rpx;
  line-height: 100rpx;
  background: #ffffff;
  text-align: center;
  color: #00BC71;
  font-size: 32rpx;
  border-radius: 100rpx;
}
.popBox{
  width:100%;
  height:100%;
  position:absolute;
  left:0;
  top:0;
  background:RGBA(0, 0, 0, 0.6);
}
.chooseBox{
   position: fixed;
  bottom: 0;
  width: 100%;
  height: 344rpx;
  background: #ffffff;
}
.takePhoto{
  text-align: center;
  width: 100%;
  line-height: 114rpx;
  border-bottom: 1px solid #CBCBD0;
  background: #ECECEC;
  font-size: 36rpx;
}
.cancel{
  width: 100%;
  line-height: 112rpx;
  text-align: center;
  color: rgba(0, 188, 113, 1);
  font-size: 40rpx;
}