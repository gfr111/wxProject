/* pages/checkout/checkout.wxss */

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 0px;
  width: 100%;
  height: 216rpx;
  background-color: white;
  justify-content: flex-start;
}

.userinfo .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-left: 40rpx;
  margin-top: 40rpx;
  background: #999;
}

.userinfo .peopleMess {
  display: flex;
  flex-direction: column;
  text-align: left;
  margin-top: 40rpx;
  margin-left: 40rpx;
  height: 120rpx;
}

.peopleMess .nickname {
  color: #383838;
  font-size: 18px;
  font-weight: bolder;
  margin-top: 10rpx;
}

.peopleMess .number{
  color: #80848F;
  font-size: 14px;
  margin-top: 6rpx;
}


.tipTitle {
  font-size: 24px;
  margin-top: 150rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.tipTitle .tipImage {
  width: 28px;
  height: 28px;
}

.tipTitle .big_title{
  margin-top: 13px;
  color: #383838;
  font-size: 24px;
  font-weight: bolder;
}

.tipTitle .sub_title{
  margin-top: 13px;
  color: #808080;
  font-size: 18px;
}

.tipTitle .spans{
  color: #FF4A4A;
  margin-left: -8rpx;
}


.suer_view {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.suer_view .top_view{
  margin: 0 0;
  width: 100%;
  height: 80rpx;
  color: #383838;
  font-weight: bold;
  text-align: center;
}

.top_view .title_view{
  text-align: center;
  font-size: 24px;
  margin-left: 13px;
}

.title_view text{
  font-size: 14px;
  padding-left: 20rpx;
  padding-right: 30rpx;
  border-left: 10rpx solid #383838;
}

.suer_view .bottom_view{
  margin:20rpx 5% 20rpx;
  width: 90%;
  height: 84rpx;
  line-height: 84rpx;
  background-color: #00BC71;
  text-align: center;
  color: #fff;
  font-size: 16px;
  border-radius: 44rpx;
}