/* pages/trainingCourse//pages/usableCarList/usableCarList.wxss */
.nullBox{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nullIcon{
  width: 372rpx;
  height: 420rpx;
  margin-bottom: 72rpx;
  margin-top:27%;

}
.nullTxt{
  color: #969696;
  font-size: 32rpx;
}
.list{
  border-top:1px solid #E6E6E6;
  width: 92%;
  height: 100%;
  overflow-y: scroll;
  background: #ffffff;
  padding: 30rpx;
}
.listItem{
  padding: 30rpx 0;
  display: flex;
  border-bottom:1px solid #E6E6E6;
}
.courseMess{
  display: flex;
  flex-direction: column;
  height: 188rpx;
}
.courseName{
color:#303030;
font-size: 28rpx;
font-weight: 600; 
width: 310rpx;
overflow: hidden;
text-overflow: ellipsis;
white-space: nowrap;
margin-bottom: 8rpx;
}
.courseIntro{
color: #C2C2C2;
font-size: 24rpx;
text-overflow: ellipsis;
overflow: hidden;
line-clamp: 2;
width: 310rpx;
word-wrap: break-word;
display: -webkit-box;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2;
}
.cardMess{
  color: #C2C2C2;
  font-size: 24rpx;
  margin-bottom: 34rpx;
}
.courseIntro{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.courseIntro>span:nth-child(1){
  color: #FA4A11;
  font-size: 40rpx;
}
.courseIntro>span:nth-child(2){
  width: 146rpx;
  height: 52rpx;
  line-height: 52rpx;
  text-align: center;
  background: #00BC71;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 26rpx;
}
.cardImgBox{
  width: 345rpx;
  height: 188rpx;
  border-radius: 4rpx;
  margin-right: 30rpx;
  position: relative;
}
.cardImgBox>image{
  width: 345rpx;
  height: 188rpx;
  border-radius: 4rpx;
  position: absolute;
  left: 0;
  top:0;
}
.cardImgBox>span{
  color: #ffffff;
  font-size: 24rpx;
  position: absolute;
  left: 30rpx;
  top:20rpx;
  font-weight: 600;
}