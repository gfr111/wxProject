/* pages/index/courseConsume.wxss */

.signBox {
  width: 100%;
  height: 100%;
  background: #fff;
}

.topBox {
  width: 100%;
  height: 260rpx;
  position: relative;
  overflow: hidden;
}

.bgImg {
  width: 100%;
  height: 290rpx;
  position: absolute;
  left: 0;
  top: 0;
}

.topBox .class_limit {
  position: absolute;
  left: 50rpx;
  top: 50rpx;
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
  padding-right: 30rpx;
}

.topBox .left_view {
  margin-left: 194rpx;
  padding-left: 30rpx;
  border-right: none;
}

.signTitle {
  color: #fff;
  font-size: 40rpx;
  font-weight: 600;
  position: absolute;
  left: 50rpx;
  top: 50rpx;
}

.signNum {
  color: #fff;
  font-size: 66rpx;
  font-weight: 600;
  position: absolute;
  left: 50rpx;
  top: 126rpx;
}

.signNum i {
  font-size: 28rpx;
  margin-left: 10rpx;
}

.signRecordBox {
  padding: 50rpx 40rpx 0 40rpx;
}

.signRecordTitle {
  color: #303030;
  font-size: 36rpx;
  font-weight: 600;
}

.nullOrder {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.nullOrder image {
  width: 372rpx;
  height: 420rpx;
  margin-top: 100rpx;
  margin-bottom: 60rpx;
}

.nullOrder text {
  color: #969696;
  font-size: 32rpx;
}

.recordList {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.signRecordList {
  margin-top: 50rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.recordList {
  height: 144rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 2rpx 10rpx 0px rgba(0, 0, 0, 0.1);
  border-radius: 16rpx;
  width: 99%;
  display: flex;
 align-items: center;
 flex-direction: row;
 justify-content: space-between;
  margin-bottom: 30rpx;
  margin-left: 4rpx;
}

.recordTop {
  /* display: flex; */
  /* margin-top: 20rpx; */
  margin-left: 20rpx;
   display: flex;
 align-items: center;
}

.recordTop>image {
  /* margin-top: 20rpx; */
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.recordTop>view {
  /* width: 48%; */
  /* margin-top: -20rpx; */
  color: #303030;
  font-size: 32rpx;
  text-align: left;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recordBottom {
  margin-right: 15rpx;
  color: #c2c2c2;
  font-size: 24rpx;
  /* position: absolute;
  right: 0 !important; */
}

.moreBtnBox {
  position: fixed;
  bottom: 60rpx;
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
}

.moreBtnBox span {
  color: #808080;
  font-size: 28rpx;
}

.moreBtnBox image {
  margin-left: 20rpx;
  width: 30rpx;
  height: 30rpx;
}
