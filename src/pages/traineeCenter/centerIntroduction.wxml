<import src="../templates/greenBtn.wxml" />

<view class='whiteBack'> 

<swiper class='swiper' indicator-dots='true' autoplay='true'interval='5000' duration='1000'>
     <block wx:for-items="{{slideList}}" wx:key="{{item.id}}">
        <swiper-item>
           <image src="{{item.pic}}" class="slide-image" indload="imageLoad" style="height:420rpx; width: 100%;" mode='aspectFill'/>
        </swiper-item>
    </block>   
</swiper>
<text class='centerName'>{{center.name}}</text>
<view class='addressBack'>
<image src='../../images/greenLocation.png'class='locationIcon'></image>
<text class='address'>{{center.displayAddress}}</text>
</view>
<view class='separatorLine'></view>
<text class='detailText'>{{center.introduction}}</text>

<template is='greenBtn' data='{{title:"购买会员卡", didTapGreenBtn:didTapGreenBtn}}'></template>
</view>
