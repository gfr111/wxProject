.index {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* background-color: white; */
}

.whiteBack {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
  height: 574rpx;
  width: 100%;
  margin-top: 24rpx;
  background-color: white;
}
.fill{
  width:100%;
  height:100%;
}
.inline{
  display:inline-block;
}
.textAreaStyle {
  height: 300rpx;
  display: flex;
  padding: 0rpx 30rpx;
}

.placeholder {
  color: #ABABAB;
  font-size: 30rpx;
  line-height: 42rpx;
  text-align: left;

}

.textStyle {
  color: black;
  font-size: 30rpx;
  line-height: 42rpx;
  text-align: left;
}

.uploadTextStyle {
  color: #7A7A7A;
  font-size: 30rpx;
  line-height: 42rpx;
  text-align: left;
  padding-left: 24rpx;
  padding-bottom: 14rpx;
}

.uploadImageStyle {
  padding-left: 20rpx;
  width: 160rpx;
  height: 160rpx;
  position: relative;
}

.greenBtn-bg {
  width: 632rpx;
  position: fixed;
  bottom: 50rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.container {
  height: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 
.cancel{
