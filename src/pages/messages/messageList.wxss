.messageCell {
  display: flex;
  flex-direction: row;
  padding: 28rpx 24rpx 30rpx 28rpx;
  align-items: center;
  width: 100%;
  height: 144rpx;
  background-color: white;
}

.messageImage {
   width: 84rpx;
   height: 84rpx;
}

.messageRightBack {
  margin-left: 28rpx;
  display: flex;
  flex-direction: column;
  width: 568rpx;
}

.rightHalfBack {
   display: flex;
   justify-content: space-between;
  
}

.messageTitle {
  color: #222222;
  font-size: 30rpx;
  height: 42rpx;
  text-align: left;
  line-height: 42rpx;
  width: 120rpx;
  padding-top: 2rpx;
}

.timeLabel {
  color: #ABABAB;
  font-size: 24rpx;
  height: 34rpx;
  text-align: right;
  line-height: 34rpx;
  display: flex;
}

.detailLabel {
  color: #ABABAB;
  font-size: 26rpx;
  height: 36rpx;
  text-align: left;
  line-height: 36rpx;
  display: flex;
}

.redPoint {
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 20rpx;
  border-radius: 32rpx;
  color: white;
  background-color: #F45046;
  min-width: 36rpx;
}