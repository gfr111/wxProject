/* pages/sign/sign.wxss */
page{
  background: #ffffff;
}
.signBox{
  width: 100%;
  height: 100%;
  background: #ffffff;
}
.topBox{
  width: 100%;
  height: 260rpx;
  position: relative;
  overflow: hidden;
}
.bgImg{
 width: 100%;
  height: 290rpx;
  position: absolute;
  left: 0;
  top:0;
}
.signTitle{
  color:#FFFFFF;
  font-size: 40rpx;
  font-weight: 600;
  position: absolute;
  left: 50rpx;
  top:50rpx;
}
.signNum{
  color:#FFFFFF;
  font-size: 66rpx;
  font-weight: 600;
  position: absolute;
  left: 50rpx;
  top:126rpx;
}
.signNum i{
  font-size: 28rpx;
  margin-left: 10rpx;

}
.signRecordBox{
  padding:50rpx 40rpx 0 40rpx;
}
.signRecordTitle{
  color: #303030;
  font-size: 36rpx;
  font-weight: 600;
}
.nullOrder{
  display: flex;
  align-items: center;
  flex-direction: column;
}
.nullOrder image{
  width: 372rpx;
  height: 420rpx;
  margin-top: 100rpx;
  margin-bottom: 60rpx;
}
  .nullOrder text{
  color: #969696;
  font-size: 32rpx;
}
  .recordList{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }
  .signRecordList{
    margin-top: 50rpx;
  }
  ::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
  .recordList{
    /* height:192rpx; */
    height: 158rpx;
    background:rgba(255,255,255,1);
    box-shadow: 0px 2rpx 10rpx 0px rgba(0,0,0,0.1);
    border-radius: 16rpx;
    width:99%;
    display:flex;
    flex-direction:column;
    margin-bottom:30rpx;
    margin-left:4rpx;
  }
  .recordTop{
    display: flex;
    margin-top: 20rpx;
    margin-left: 20rpx;
  }
  .recordTop>image{
    margin-top: 24rpx;
    width: 64rpx;
    height: 64rpx;
    border-radius: 50%;
    margin-right: 20rpx;
  }
  .recordTop>view{
    margin-top: 10rpx;
    width: 48%;
    display: flex;
    flex-direction: column; 
  }
  .recordTop>view>span:nth-child(1){
    color: #303030;
    font-size: 32rpx;
    margin-bottom: 12rpx;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .recordTop>view>span:nth-child(2){
    color: #888;
    font-size: 24rpx;
    margin-top: 6rpx;
    text-align: left;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }
  .recordBottom{
    margin-right: 15rpx;
    color: #C2C2C2;
    font-size: 24rpx;
    margin-top: 36rpx;
    position: absolute;
    right: 0!important;
  }
  .moreBtnBox{
    display: flex;
    width: 100%;
    align-items: center;
    justify-content: center;
    margin: 20rpx 0;
       color: #808080;
   font-size: 28rpx; 
  }
.fitRecordList{
  border-left: 1px solid #F0F0F0;
  padding-left: 32rpx;
  padding-right: 30rpx;
  padding-top:10rpx;
}
.fitRecordItem{
  margin-top:30rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 2rpx 10rpx 0px rgba(0,0,0,0.1);
  border-radius:8rpx;
  position: relative;
  width: 640rpx;
}
.fitRecordTop{
  background: #F8FAFC;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 86rpx;
}
.centetBox{
  display: flex;
  align-items: center;
}
.centetBox>image{
  width: 44rpx;
  height: 44rpx;
  margin-left:20rpx;
  margin-right: 12rpx;
}
.centetBox>span{
  color: #303030;
  font-size: 32rpx;
  font-weight: 600;
}
.fitRecordTop>span{
  color: #A4A4A4;
  font-size: 24rpx;
  margin-right: 26rpx;
}
.recordContain>view{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.recordContain>view>span:nth-child(1){
  color: #888888;
  font-size: 24rpx;
  margin-left: 20rpx;

}
.recordContain>view>span:nth-child(2){
  color: #303030;
  font-size: 28rpx;
  margin-right: 26rpx;
  font-weight: 600;
}
.recordIcon{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  left: -47rpx;
  top: 28rpx;

