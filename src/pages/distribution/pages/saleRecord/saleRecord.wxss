/* pages/distribution//pages/saleRecord/saleRecord.wxss */
page{
  height: 100%;
}
.saleRecordBox{
  height: 100%;
  overflow: hidden;
  background: #ffffff;
}
.timeSelectBox{
  height: 90rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow:0px 2px 10px 0px rgba(0,0,0,0.1);
}
.rightBox>image{
  width: 32rpx;
  height: 32rpx;
}
.leftBox{
  margin-left: 40rpx;
  display: flex;
  align-items: center;
}
.leftBox span{
  padding: 4rpx 20rpx;
  border-radius: 24rpx;
  background:#F7F8F9;
  font-size:26rpx;
  color: #B3B3B3;
  margin-right: 20rpx;
}
.leftBox .active{
  color: #303030
}
.rightBox{
  margin-right: 30rpx;
   display: flex;
  align-items: center;
}
.rightBox>span{
 color: #B3B3B3;
 font-size: 26rpx;
 margin-right: 10rpx; 
}
.interestBbox{
  width: 100%;
  padding: 34rpx 0;
  background-color: #CCAC8C;
  display: flex;
  align-items: center;
}
.order{
  padding-left: 40rpx;
  display: flex;
  flex-direction: column;
  padding-right: 50rpx;
  color: #ffffff;
}
.order>span:nth-child(1){
    font-size: 36rpx;
    font-weight: 600;
}
.order>span:nth-child(2){
  font-size: 24rpx;
}
.nullBox{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nullIcon{
  width: 372rpx;
  height: 420rpx;
  margin-bottom: 72rpx;
  margin-top:27%;

}
.nullTxt{
  color: #969696;
  font-size: 32rpx;
}
.goodsBox{
  background-color:#ffffff;
  padding:  30rpx 40rpx;
  border-top: 20rpx solid #F7F8F9;
}
.itemTop{
  display: flex;
  align-items: center;
  justify-content: space-between; 
  border-bottom: 1px solid #E5E5E5;
  padding-bottom: 22rpx;
}
.member{
  color: #303030;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}
.orderTime{
  display: flex;
  align-items: center;
}
.orderTime>image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
}
.orderTime>span{
  color: #303030;
  font-size: 28rpx;
}
.orderStatus{
  font-size: 14px;
  color: #FF3300;
}
.cardContent{
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1px solid #E5E5E5;
  margin-top: 20rpx;
}
.cardContent .cardIcon{
  width: 128rpx;
  height: 128rpx;
  margin-right: 30rpx;
  border-radius: 8rpx;
}
.cardContent .goodsMess{
  height: 128rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cardContent .name{
  color: #303030;
  font-size: 28rpx;
  font-weight: 600;
}
.cardContent .price>view:nth-child(1){
   color: #303030;
  font-size: 28rpx;
}
.cardContent .price>view:nth-child(2){
   color: #898989;
  font-size: 24rpx;
}
.itemBottom{
  display: flex;
  justify-content: space-between;
  padding-top: 20rpx;
}
.membership{
  color: #898989;
  font-size: 28rpx;
}
.orderPrice{
  text-align: right;
}
.orderPrice>view:nth-child(1){
  color: #898989;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}
.orderPrice>view:nth-child(2){
  color: #303030;
  font-size: 32rpx;
}
.moreBtnBox {
  display: flex;
  width: 216rpx;
  background: #ffffff;
  height: 66rpx;
  align-items: center;
  justify-content: center;
  box-shadow:0px 4px 20px 2px rgba(0,0,0,0.1);
  border-radius: 32rpx;
  margin-top:20rpx;
  margin-bottom: 20rpx;
}
.moreBtn{
  display: flex;
  align-items: center;
  justify-content: center;
}
.moreBtnBox span {
  color: #808080;
  font-size: 28rpx;
}

.moreBtnBox image {
  margin-left: 20rpx;
  width: 30rpx;
  height: 30rpx;
}
