/* pages/distribution//pages/inviteRecord/inviteRecord.wxss */
page{
  height: 100%;
}
.saleRecordBox{
  height: 100%;
  overflow: hidden;
}
.interestBbox{
  width: 100%;
  padding: 34rpx 0;
  background-color: #CCAC8C;
  display: flex;
  align-items: center;
}
.order{
  padding-left: 40rpx;
  display: flex;
  flex-direction: column;
  padding-right: 50rpx;
  color: #ffffff;
}
.order>span:nth-child(1){
    font-size: 36rpx;
     font-weight: 600;
}
.order>span:nth-child(2){
  font-size: 24rpx;
}
.nullBox{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nullIcon{
  width: 372rpx;
  height: 420rpx;
  margin-bottom: 72rpx;
  margin-top:27%;

}
.nullTxt{
  color: #969696;
  font-size: 32rpx;
}
.inviterList{
  padding: 30rpx 40rpx;
}
.inviterItem{
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  margin-bottom: 30rpx;
  border-radius: 16rpx;
}
.inviterMMess{
  display: flex;
}
.inviterMMess>image{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.mess{
  height: 88rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.mess>view:nth-child(1){
  color: #353535;
  font-size: 28rpx;
}
.mess>view:nth-child(2){
  color: #B8B8B8;
  font-size: 24rpx;
}
.inviterItem>image{
  width: 32rpx;
  height: 32rpx;
}
.moreBtnBox {
  display: flex;
  width: 216rpx;
  background: #ffffff;
  height: 66rpx;
  align-items: center;
  justify-content: center;
  box-shadow:0px 4px 20px 2px rgba(0,0,0,0.1);
  border-radius: 32rpx;
  margin-top:20rpx;
  margin-bottom: 20rpx;
}
.moreBtn{
  display: flex;
  align-items: center;
  justify-content: center;
}
.moreBtnBox span {
  color: #808080;
  font-size: 28rpx;
}

.moreBtnBox image {
  margin-left: 20rpx;
  width: 30rpx;
  height: 30rpx;
}
