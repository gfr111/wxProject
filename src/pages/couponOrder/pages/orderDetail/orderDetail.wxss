/* pages/couponOrder/pages/orderDetail/orderDetail.wxss */
.statusBox{
  width: 100%;
  height: 130rpx;
  position: relative;
}
.statusBg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 130rpx;
}
.statusBox>view{
  position: absolute;
  left: 0;
  top:0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width:100%;
  height:100%;
}
.payStatus{
  margin-left: 40rpx;
}
.payStatus>image{
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}
.payStatus>text{
  color: #ffffff;
  font-size: 36rpx;
  font-weight: 600;
}
.payTime{
  color: #ffffff;
  font-size: 28rpx;
  margin-right: 40rpx;
}
.ticketMess{
  width: 100%;
  background: #ffffff;
  display: flex;
  align-items: center;
  height: 258rpx;
  margin-bottom: 20rpx;
}
.ticketMess>image{
  width: 346rpx;
  height: 178rpx;
  border-radius: 8rpx;
  margin-right: 30rpx;
  margin-left:30rpx;
}
.ticketMess>view{
  display: flex;
  height: 178rpx;
  flex-direction: column;
}
.ticketMess>view>text:nth-child(1){
  color: #303030;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.ticketMess>view>text:nth-child(2){
  color: #898989;
  font-size: 24rpx;
}
.ticketCollectionBox{
  padding:30rpx;
  background: #ffffff;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.ticketCollectionTop{
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.codeBox{
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top:40rpx;
}
.codeBox>image{
  width: 288rpx;
  height: 288rpx;
}
.codeBox>text:nth-child(2){
 color: #303030;
 font-size: 28rpx;
 margin-top: 30rpx;
 margin-bottom: 30rpx; 
}
.codeBox>text:nth-child(3){
  width: 450rpx;
  line-height: 80rpx;
  border:1px solid #E4E4E4;
  text-align: center;
  color: #303030;
  font-size: 32rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.orderMess{
  background: #ffffff;
  padding:30rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}
.messItem{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 14rpx;
}
.messItem>text:nth-child(1){
  color: #303030;
  font-size: 28rpx;
  font-weight: 600;
}
.messItem>text:nth-child(2){
  color: #303030;
  font-size: 28rpx;
}
.orderNotes{
   background: #ffffff;
  padding:30rpx;
  display:flex;

}
.orderNotes>text:nth-child(1){
   color: #303030;
  font-size: 28rpx;
  font-weight: 600;
}
.orderNotes>text:nth-child(2){
   color: #303030;
  font-size: 28rpx;
  width: 79%;
}
.popBox{
  position: relative;
  opacity: 0.4;
}
.popBox>image{
 width:152rpx;
  height:152rpx;
  position:absolute;
  top:86rpx;
  right:136rpx;
}
.bg{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  position: absolute;
  top:0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}
.courseBox{
  width: 650rpx;
  height: 830rpx;
  background: #ffffff;
  border-radius: 16rpx
}
.courseTop{
  width: 570rpx;
  height: 98rpx;
  padding: 40rpx;
  background: #F4F4F4;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  display: flex;
  justify-content: space-between;
}
.leftBtn{
  display: flex;
  flex-direction: column;
}
.leftBtn>text:nth-child(1){
  color: #303030;
