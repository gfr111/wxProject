  flex-direction: column;
}
.courseContent>image{
  width: 410rpx;
  height: 466rpx;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
}
.courseContent>text{
  color: #303030;
  font-size: 28rpx;
  margin-bottom: 44rpx;
}
.checkScence{
  width: 100%;
  height:120rpx;
  border-top: 1px solid  #E5E5E5;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background: #ffffff;
}
.checkScence>text{
  width: 212rpx;
  height: 76rpx;
  border-radius: 40rpx;
  border:1px solid #E5E5E5;
  text-align: center;
  line-height: 76rpx;
  color: #303030;
  font-size: 32rpx;
  margin-right: 30rpx;
}
.orderDetailBox{
  padding-bottom: 140rpx;
