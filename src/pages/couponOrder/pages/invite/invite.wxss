/* pages/couponOrder//pages/invite/invite.wxss */
page{
  width: 100%;
  height: 100%;
  background: #FF5956;
}
.bg{
  width: 100%;
 height: 500rpx;
 position: absolute;
 left: 0;
 top:0;
}
.inviteContent{
  position: absolute;
  left: 0;
  top:0;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
}
.inviteTitle{
  color: #FFFFFF;
  font-size: 64rpx;
  font-weight: 600;
  text-align: center;
  margin-top:72rpx;
  margin-bottom: 16rpx;
}
.inviteTxt{
  color: #FFFFFF;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  margin: 16rpx 30rpx;
}
.inviteTxt span:nth-child(1){
  text-align: center;
  width: 100%;
}
.cardBox{
  width: 590rpx;
  background:#FFFFFF;
  border:4rpx solid #FFBC35;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  padding: 32rpx 40rpx;
  margin-top: 60rpx;
}
.cardBox>image{
  width: 230rpx;
  height: 144rpx;
  margin-right: 30rpx;
  border-radius: 4rpx;
}
.cardMess{
  display: flex;
  flex-direction: column;
}
.cardName{
  color: #323437;
  font-size: 32rpx;
  font-weight: 600;
}
.cardPrice{
  color: #323437;
  font-size: 24rpx;
  margin-top: 4rpx;
}
.cardLine{
  width: 16rpx;
  height: 3rpx;
  background: #8A8A8A;
  margin: 12rpx 0;
}
.cardEff{
  color: #8A8A8A;
  font-size: 24rpx;
}
.inviteBtn{
  width: 590rpx;
  height: 90rpx;
  background: linear-gradient(180deg,rgba(255,243,174,1) 0%,rgba(255,205,104,1) 100%);
  box-shadow:0px 3px 4px 0px rgba(195,0,0,0.2);
  text-align: center;
  line-height: 90rpx;
  border-radius: 50rpx;
  margin-top: 40rpx;
  color: #ED381C;
  font-size: 32rpx;
  margin-bottom: 60rpx;
  font-weight: 600;
  min-height: 90rpx;
}
 .dateTitle{
    display: flex;
    align-items: center;
    justify-content: center;
}
.radiusBox{
    width:10rpx;
    height:30rpx;
    background:linear-gradient(rgba(255,243,174,1) 0%,rgba(255,205,104,0) 100%);
    border-radius:6rpx;
    -moz-transform:rotate(45deg);
    -webkit-transform:rotate(45deg);
    -o-transform:rotate(45deg);
    transform:rotate(45deg);
    margin-right: 20rpx;
}
.dateTitle text{
    color: #FFEEA4;
    font-size:24rpx;
    font-weight: 600;
    margin-right: 20rpx;
    margin-left: 10rpx;
}
.dataContent{
    background:rgba(255,143,141,0.3);
    margin:22rpx 40rpx  40rpx;
    border-radius: 12rpx;
    width: 670rpx;
}
.dataContent .inviteData{
    display: flex;
    align-items: center;
    justify-content: center;
    padding:50rpx 0;
}
.dataContent .dataItem{
    display: flex;
    flex-direction: column;
    align-content: center;
    width: 220rpx;
    text-align: center;
}
.dataContent .dataItem span:nth-child(1){
    color: #ffffff;
    font-size: 52rpx;
    font-weight: 600;
}
.dataContent .dataItem span:nth-child(2){
    color: #FFD2D1;
    font-size: 24rpx;
}
.dataContent .dataItem:nth-child(2){
    border-left: 2rpx solid #FFFFFF;
    border-right: 2rpx solid #ffffff;
}
.checkDetail{
    width:276rpx;
    height:60rpx;
    background:rgba(255,66,62,1);
    border-radius:12rpx;
    text-align: center;
    line-height: 60rpx;
    margin: auto;
    color: #FFD2D1;
    font-size: 24rpx;
    margin-bottom: 40rpx
}
.content{
  width: 574rpx;
  margin: 0 40rpx 20rpx;
  background:rgba(255,143,141,0.3);
  border-radius: 12rpx;
  padding: 32rpx 48rpx;
  color: #FFD2D1;
  font-size: 32rpx;

}
.inviteBtn::after{
   border: none;
}