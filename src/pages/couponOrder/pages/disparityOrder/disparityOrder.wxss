/* pages/couponOrder/pages/disparityOrder/disparityOrder.wxss */
.orderMess{
  background: #ffffff;
  padding: 30rpx ;
  margin-bottom: 20rpx;
}
.messItem{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 22rpx;
}
.messItem text{
  color: #303030;
  font-size: 28rpx;
}
.orderMess .messItem:last-child{
  margin-bottom: 0;
}
.orderPayStyle{
  /* margin-right: 30rpx; */
  display: flex;
  align-items: center;
}
.orderPayStyle text{
color: #303030;
font-size: 28rpx;
margin-right: 10rpx;
}
.payIcon{
  width: 32rpx;
  height: 32rpx;
  margin-top:4rpx;
}
.bottomBox{
  width: 100%;
  height: 120rpx;
  background: #FFFFFF;
  border-top: 1px solid #E5E5E5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
}
.priceBottom{
  color: #070707;
  font-weight: 600;
  margin-left: 30rpx;
}
.bottomBox>text{
  width: 320rpx;
  height: 72rpx;
  border-radius: 40rpx;
  background: #21C483;
  color: #ffffff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}