<!--pages/couponOrder//pages/inviteList/inviteList.wxml-->
<view class="list">
    <view class="inviteData">
      <view class="dataItem">
          <span>{{invite.invitationSummary.invited}}</span>
          <span>邀请成功</span>
      </view>
      <view class="dataItem">
          <span>{{invite.invitationSummary.inviting}}</span>
          <span>邀请中</span>
      </view>
      <view class="dataItem">
          <span>{{invite.invitationSummary.point}}</span>
          <span>获得奖励（积分）</span>
      </view>
    </view>
   <view class="listBox" wx:if="{{invite.invitations.length>0}}">
      <view class="listItem" wx:for="{{invite.invitations}}" wx:if="{{invite.invitations.length>0}}">
        <view class="left">
          <image src="{{item.photo?item.photo:'../../../../images/default_user.png'}}"></image>
          <view class="peopleMess">
            <view>
              <text style="margin-right:20rpx;">{{item.name}}</text>
              <text>{{item.phone}}</text>
            </view>
            <view wx:if="{{item.status==1}}">加入时间：{{item.joinTimeStr||''}}</view>
            <view wx:if="{{item.status==0}}">邀请时间：{{item.createTimeStr||''}}</view>
          </view>
        </view>
        <view class="right" >
          <view class="point" wx:if="{{item.status==1}}">
            <span>{{item.point}}</span>
            <span>积分</span>
          </view>
          <span wx:if="{{item.status==0}}" style='color:#FF9D59;font-size:24rpx;'>邀请中</span>
        </view>
      </view>
    </view>
     <view class='nullBox' wx:if="{{invite.invitations.length==0}}">
      <image src='../../../../images/noRank.png' class='nullIcon'></image>
        <text class='nullTxt'>暂无数据</text>
    </view>
</view>
