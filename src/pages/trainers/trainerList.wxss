
page{
  background-color: #fff;
}
@import "../cardsPurchaseOnline/availableCardsList.wxss";

.teacherList{
   margin: 0 30rpx 0 30rpx;
   background: #fff;
   height: 202rpx;
   border-bottom: 2rpx solid #F7F7F7;
   display: flex;
   flex-direction: row;
   justify-content: space-between;
   align-items: center;
}

.teacherList>text{
color:#00BC71 ;
font-size: 28rpx;
display: inline-block;
padding:2rpx 30rpx;
border-radius: 30rpx; 
border: 2rpx solid #00BC71
}
.headPortrait{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.sex{
  width: 28rpx;
  height:28rpx;
  position: relative;
  left:-26rpx;
  top:-2rpx;
}
.cardName{
  line-height: 20rpx;
  font-size: 32rpx;
  display:block;
   color: #303030;
   font-weight: 500;
   width: 390rpx;
}
.info_view{
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
}
.info_view>text:nth-child(1){
  color: #214298;
  font-size: 20rpx;
  width: 108rpx;
  height: 40rpx;
  padding: 0 16rpx;
  background:rgba(18,49,196,0.1);
  border-radius: 8rpx;
}
.cardCenter{
   font-size: 24rpx;
   display: block;
   color: #6E6E6E;
   margin-bottom: 0;
   line-height: 40rpx;
   overflow: hidden;
   text-overflow: ellipsis; 
   white-space: nowrap;
   width:390rpx;
   height: 40rpx;

}

.rightDetailBacks{
  display: inline-block;
  box-sizing:border-box;
  margin: 40rpx 0 0 30rpx;
}
.detail{
  background-color: #fff;
}



