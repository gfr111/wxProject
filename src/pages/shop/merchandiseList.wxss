/* pages/shop/merchandiseList.wxss */

.line {
  margin-left: 15px;
  margin-right: 15px;
  height: 2rpx;
  padding-left: 15px;
  padding-right: 15px;
  background-color: #e5e5e5;
}

.type-line {
  width: 70%;
  height: 2rpx;
  background-color: #e5e5e5;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.change {
  min-width: 108rpx;
  width: 108rpx;
  height: 44rpx;
  background: rgba(0, 188, 113, 1);
  border-radius: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 24rpx;
}

.tn-buy {
  background: #00bc71;
  border-radius: 42rpx;
  width: 230rpx;
  height: 76rpx;
  font-size: 34rpx;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  line-height: 76rpx;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 1;
  opacity: 0.5;
}

.head-box {
  background-color: white;
  height: 80px;
  padding: 15px;
}

.head-box image {
  width: 100%;
  height: 100%;
}

.head-text {
  position: absolute;
  top: 38px;
  left: 28px;
}

.head-tip {
  color: #d9d9d9;
  font-size: 14px;
  margin-bottom: 6px;
}

.center-name {
  color: #fff;
  font-size: 22px;
}

.main {
  display: flex;
  padding: 10px 15px;
  background-color: white;
  height: 510px;
}

.main-left {
  width: 20%;
  background-color: #f7f7f7;
}

.type-box {
  margin-top: 10px;
}

.type-item {
  height: 33px;
  background-color: white;
  font-size: 12px;
  color: #303030;
  display: flex;
  align-items: center;
  font-weight: bold;
  padding: 2px 0;
}

.selected-tip {
  background-color: #288257;
  width: 4px;
  height: 70%;
  margin-right: 5px;
}

.blank {
  width: 272rpx;
  height: 304rpx;
}

.unSelected-type {
  height: 33px;
  font-size: 12px;
  color: #303030;
  display: flex;
  align-items: center;
  padding: 2px 0;
}

.unSelected-tip {
  background-color: #f7f7f7;
  width: 4px;
  height: 70%;
  margin-right: 5px;
}

.scroll-box {
  height: 100%;
  margin-bottom: 10px;
  padding: 0 0 0 15px;
  font-size: 15px;
  box-sizing: border-box;
}

.main-right {
  width: 80%;
}

.item-head {
  height: 20px;
  padding: 6px 0;
  display: flex;
  align-items: center;
}

.item-head-text {
  width: 30%;
  font-size: 12px;
}

.item-body {
  height: 75px;
  padding: 11px 0;
  display: flex;
  /*border-bottom:1px solid #F4F4F4;*/
}

.item-pic {
  height: 100%;
  border: 1px solid #f4f4f4;
  /*border-radius:5px;*/
  position: relative;
}

.item-pic image {
  width: 75px;
  height: 100%;
}

.noStock {
  width: 90%;
  height: 90%;
  top: 5%;
  left: 5%;
  border-radius: 50%;
  position: absolute;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 15px;
  background-color: rgba(0, 0, 0, 0.5);
}

.item-text {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
  margin-left: 10px;
}

.item-member {
  font-size: 13px;
  color: #a3a3a3;
  margin-top: 10rpx;
}

.car-item {
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 15px;
  font-size: 15px;
  color: #323232;
  border-bottom: 1px solid #f4f4f4;
}

.car {
  background-color: white;
  position: fixed;
  bottom: 60px;
  z-index: 2;
  width: 100%;
}

.car-head {
  background-color: #f4f4f4;
  height: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10px 15px;
  font-size: 15px;
  color: #868686;
}

.car-pay-info {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.pay-info-icon {
  width: 20px;
  height: 20px;
  margin-top: 3px;
}

.noItem {
  height: 100%;
  display: flex;
  align-items: center;
  margin-left: 20px;
  color: #a3a3a3;
}


.closed {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  color: #7a7a7a;
  font-size: 30rpx;
  line-height: 30rpx;
  margin-top: 128rpx;
}
.nobg{
  background: #f2f2f2
}
