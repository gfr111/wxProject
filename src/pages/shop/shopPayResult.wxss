/* pages/shop/shopPayResult.wxss */

.receive {
  background: #00bc71;
  border-radius: 42rpx;
  width: 230rpx;
  height: 76rpx;
  font-size: 30rpx;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  line-height: 76rpx;
}

.success {
  color: #364f64;
  font-size: 28px;
  margin-bottom: 20px;
}

.tip {
  color: #a2aabc;
  font-size: 16px;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 1;
  opacity: 0.5;
}

.getInfo {
  top: 10%;
  height: 1038rpx;
  width: 670rpx;
  z-index: 2;
  position: fixed;
  left: 5%;
}



.logo {
  width: 112rpx;
  height: 112rpx;
  background: #fff;
  border-radius: 50%;
  position: absolute;
  top: -5%;
  left: 50%;
  transform: translateX(-55rpx);
  box-shadow: 2rpx 2rpx 8rpx #a2aabc;
  display: flex;
  align-items: center;
  justify-content: center;
}

.logo>image {
  width: 104rpx;
  height: 104rpx;
  border-radius: 50%;
}

.scroll-box {
  display: flex;
  white-space: nowrap;
  overflow-x: auto;
  height: 480rpx;
  width: 100%;
  margin-top: 25px;
  margin-bottom: 20px;
}

.scroll-box view {
  display: inline-block;
}

.top-time {
  color: #b4b4b4;
  font-size: 22rpx;
  margin-right: 12rpx;
}

.top-timetwo {
  float: right;
  font-size: 24rpx;
  color: #6f6f6f;
  margin-right: 20rpx;
}

.close {
  width: 30rpx;
  height: 30rpx;
  margin-left: 28rpx;
  float: left;
}

.tips {
  margin-top: 114rpx;
  color: #b4b4b4;
  font-size: 24rpx;
}

.num {
  display: inline-block;
  width: 173px;
  margin: 0 auto;
  background-color: #f8f8f8;
  height: 40px;
  font-size: 24px;
  padding-top: 5px;
  margin-top: 40rpx;
  margin-bottom: 90rpx;
}

.numtaken {
  opacity: 0.4;
  text-decoration: line-through;
}

.code {
  width: 320rpx;
  height: 320rpx;
  margin-bottom: 56rpx;
  overflow: visible;
}

.item {
  width: 352rpx;
  height: 452rpx;
  position: relative;
  margin: 0 16rpx;
  box-shadow: 0px 6rpx 16rpx 0px rgba(0, 0, 0, 0.13);
  border-radius: 17rpx;
}

.bgcount {
  width: 26px;
  height: 38px;
  position: absolute;
  margin-left: -16rpx;
}

.count {
  width: 26px;
  position: absolute;
  font-size: 10px;
  color: white;
  margin-left: -16rpx;
}

.countnum {
  width: 26px;
  position: absolute;
  font-size: 15px;
  color: white;
  top: 14px;
  margin-left: -16rpx;
}

.goodspic {
  width: 256rpx;
  height: 264rpx;
  margin-top: 38rpx;
}

.goodsname {
  display: block;
  white-space: pre-line;
  width: 100%;
  font-size: 15px;
}

.btn {
  width: 320rpx;
  height: 84rpx;
  background: rgba(0, 188, 113, 1);
  box-shadow: 0px 4rpx 10rpx 0px rgba(0, 0, 0, 0.08);
  border-radius: 43rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-160rpx);
  bottom: 102rpx;
  color: #fff;
}

.btn::after {
  border: none;
}

.pickup {
  width: 152rpx;
  height: 152rpx;
  position: absolute;
  margin-top: -76rpx;
  right: 18%;
  top: 50%;
  z-index: 999999999999999999999999999999;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.scroll-box .goodname {
  font-size: 34rpx;
  font-weight: 500;
  color: rgba(48, 48, 48, 1);
  text-align: center;
  display: block;
  white-space: normal;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  line-clamp: 2;
  word-wrap: break-word;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.canvas {
  margin-bottom: 56rpx;
  left: 1000%;
  width: 320rpx;
  height: 320rpx;
}
