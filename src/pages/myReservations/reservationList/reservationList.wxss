/* pages/myReservations/reservationList/reservationList.wxss */
.tab{float: left;text-align: center;padding: 10rpx 0;font-size: 30rpx; margin-right: 80rpx;padding-bottom: 24rpx;color: #999999;}
.topTabSwiper{ zoom: 1; padding-right: 10rpx;padding-left: 48rpx;background: #ffffff;}
.topTabSwiper:after{content: ""; clear: both;display: block;}
.tabBorer{border-bottom: 2px solid #333333; color: #303030;font-weight: 600;}
.swiper{width: 100%; box-shadow: 0px -2px 3px 0px rgba(0, 0, 0, 0.1);height: 100%;}
.swiper_con{ width: 100%; height: 100%;background: #F7F8F9;}
.dateBox{
  width: 100%;
  height: 82rpx;
  line-height: 82rpx;
  color: #A1A1A1;
  font-size: 28rpx;
  padding-left: 40rpx;
  display: block;
}
.courseBox{
  width: 90%;
  background: #ffffff;
  padding:0 40rpx;
}
.courseTop{
  height: 84rpx;
  border-bottom: 1px solid #E5E5E5;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.courseTime>image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
}
.courseTime>span{
  color: #303030;
  font-size: 28rpx;
}
.courseStatus{
  font-size: 28rpx;
}
.courseMiddle{
  padding:40rpx 0;
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
}
.courseImg{
  width: 140rpx;
  height: 140rpx;
  position: relative;
  margin-right: 30rpx;
  border-radius: 8rpx;
}
.courseImg>image{
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  top:0;
  left: 0;
border-radius: 8rpx;
}
.level{
  width: 64rpx;
  text-align: center;
  line-height: 30rpx;
  background: #F2C486;
  border-radius:0 50rpx 50rpx 0;
  height: 30rpx;
  color: #ffffff;
  font-size: 20rpx;
  position: absolute;
  left: 0;
  top:12rpx;
}
.courseMess{
  display: flex;
  flex-direction: column; 
}
.courseMess>text{
 color: #A1A1A1;
 font-size: 24rpx;
 margin-bottom: 6rpx;
}
.courseMess>text:nth-child(1){
 color: #303030;
 font-size: 28rpx;
 margin-bottom: 20rpx;
}
.courseBottom{
   height: 108rpx;
   display: flex;
   align-items: center;
   justify-content: flex-end;
   border-top:1px solid #E5E5E5;
}
.courseBottom>span{
  width: 160rpx;
  height: 64rpx;
  text-align: center;
  line-height: 68rpx;
  border:1px solid #E5E5E5;
  border-radius: 10rpx;
  margin-left: 20rpx;
  font-size: 28rpx;
}
.courseMess>view{
  display: flex;
  align-items: center;
  margin-top:26rpx;
}
.courseMess>view>image{
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  margin-right: 10rpx;
}
.courseMess>view>text{
  color: #A1A1A1;
  font-size: 24rpx;
}
.swiper_nomal{
  display: flex;
  align-items: center;
  flex-direction: column;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.swiper_nomal image{
  width: 372rpx;
  height: 420rpx;
  margin-top: 200rpx;
  margin-bottom: 60rpx;
}
.swiper_nomal span{
  color: #969696;
  font-size: 32rpx;
}
.trainerMess{
  display: flex;
  flex-direction: column;
}
.trainerMess>image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}
.trainerMess>text{
  color: #898989;
  font-size: 24rpx;
}