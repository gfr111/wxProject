/* pages/myOrders/orderList/orderList.wxss */
.tab{float: left;text-align: center;padding: 10rpx 0;font-size: 30rpx; margin-right: 80rpx;padding-bottom: 24rpx;color: #999999;}
.topTabSwiper{ zoom: 1; padding-right: 27%;padding-left: 48rpx;background: #ffffff;}
.topTabSwiper:after{content: ""; clear: both;display: block;}
.tabBorer{border-bottom: 2px solid #333333; color: #303030;font-weight: 600;}
.swiper{width: 100%; box-shadow: 0px -2px 3px 0px rgba(0, 0, 0, 0.1);height: 100%;}
.swiper_con{text-align: center; width: 100%; height: 100%;background: #F7F8F9;}
.orderList{
 background: #ffffff;
 padding:0 40rpx;
 margin-bottom: 30rpx;
}
.orderTop{
  height: 86rpx;
  border-bottom: 1px solid #E5E5E5;
  display: flex;
  align-items: center;
  position: relative;
}
.orderImg{
  width: 28rpx;
  height: 28rpx;
  margin-right: 26rpx;
}
.orderTimes{
  color: #303030;
  font-size: 28rpx;
}
.orderStatus{
  position: absolute;
  right: 0;
  color: #FF8F4B;
  font-size: 28rpx;
}
.orderCenter{
   margin-top:28rpx;
}
.orderImgBox{
  width: 346rpx;
  height: 178rpx;
  border-radius: 16rpx;
  position: relative;
  margin-right: 30rpx;
  float: left;
}
.cardImg{
  width: 346rpx;
  height: 178rpx;
  border-radius: 16rpx;
  position: absolute;
  left: 0;
  top:0;
}
.imgName{
  color: #F3D2AE;
  font-size: 24rpx;
  position: absolute;
  left: 28rpx;
  top:20rpx;
}
.clearfix::after {
    content: ".";
    clear: both;
    display: block;
    overflow: hidden;
    font-size: 0;
    height: 0;
}
.orderMess{
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.orderName{
  color:#303030;
  font-size: 28rpx;
  margin-bottom: 56rpx;
  font-weight: 600;
  margin-top:8rpx;
  width: 300rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: left;
}
.orderPrice{
   color:#303030;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}
.orderNum{
color: #898989;
font-size: 24rpx;
}
.orderBottom{
  margin-top:30rpx;
  border-top:1px solid #E5E5E5;
}
.orderBottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 110rpx;
}
.orderBottomPrice{
  color: #303030;
  font-size: 40rpx;
  font-weight: 600;
}
.orderBottomPrice i{
  font-style: normal;
  font-size: 28rpx;
}
.orderDeatil{
  width: 160rpx;
  height: 68rpx;
  color: #303030;
  font-size: 28rpx;
  border:1px solid #E5E5E5;
  text-align: center;
  line-height: 68rpx;
  border-radius: 8rpx;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.toPay{
  color: rgba(0, 188, 113, 0.5);
  border:1px solid rgba(0, 188, 113, 0.5);
}
.nullOrder{
  position: absolute;
  left: 44%;
  top:28%;
  transform: translate(-50% -50%)
}
.nullOrder image{
  width: 120rpx;
  height: 120rpx;
}
  .nullOrder text{
    display: block;
    font-size: 30rpx;
    color: #7a7a7a;
    margin-top:40rpx;
  }