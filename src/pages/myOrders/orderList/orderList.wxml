                     <image src='{{item.coursePic?item.coursePic:"https://www.forzadata.cn/static/images/ticket/swim.jpg"}}' class='cardImg' wx:if="{{item.type==10}}"></image>
                     <!-- <span class='imgName' wx:if="{{item.type==10}}" style='color:#FFFFFF;'>{{item.cardName}}</span> -->
                      <span class='imgName' wx:if="{{item.type==1||item.type==2}}" style='color:#FFFFFF;'>私教课</span>
                      <span class='imgName' wx:if="{{item.type==3||item.type==6}}" style='color:#9CC0F4;'>期限卡</span>
                      <span class='imgName' wx:if="{{item.type==4}}" style='color:#FFFFFF;'>次卡</span>
                      <span class='imgName' wx:if="{{item.type==5}}" style='color:#F3D2AE;'>储值卡</span>
                  </view>
                  <view class='orderMess'>
                    <span class='orderName'>{{item.cardName}}</span>
                    <span class='orderPrice'>¥{{item.amount}}</span>
                    <span class='orderNum'>数量：1</span>
                  </view>
                </view>
                <view class='orderBottom'>
                  <span class='orderBottomPrice'><i>￥</i>{{item.amount}}</span>
                   <span class='orderDeatil toPay' wx:if="{{item.statusId==0}}" bindtap='goPay' data-source='{{item.orderSource}}' data-type='{{item.type}}' data-id='{{item.id}}'>去支付</span>
                </view>
              </view>
            </view>
        </scroll-view>
      </view>
    </swiper-item>
    <swiper-item>
      <view class='swiper_con'>
        <scroll-view scroll-y="true" style="height: {{listHeight}}px;overflow:auto;" >
            <view class='nullOrder' wx:if="{{finishPay.length==0}}">
              <image src='../../../images/noOrders.png'></image>
