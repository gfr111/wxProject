/* pages/cardsPurchaseOnline/useClass.wxss */

.select_box {
  background: #fff;
  width: 100%;
  margin: auto;
  position: relative;
  margin-bottom: 20rpx;
}

.select {
  box-sizing: border-box;
  height: 70rpx;
  /* border:1px solid #efefef; */
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}

.select_text {
  font-size: 30rpx;
}

.select_img {
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition: transform 0.3s;
}

.select_img_rotate {
  transform: rotate(180deg);
}

.option_box {
  position: absolute;
  top: 70rpx;
  width: 100%;
  border: 1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
}

.option {
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  padding-left: 9%;
}

.positions {
  width: 36rpx;
  height: 36rpx;
  float: left;
  margin-top: 18rpx;
  margin-left: 30rpx;
}

.list {
  padding: 30rpx;
  padding-bottom: 0;
  background: #fff;
}

.list text {
  display: block;
  border-bottom: 2rpx solid #e6e6e6;
  font-size: 30rpx;
  padding-bottom: 30rpx;
}

.nullOrder {
  position: absolute;
  left: 44%;
  top: 28%;
  transform: translate(-50% -50%);
}

.nullOrder image {
  width: 120rpx;
  height: 120rpx;
}

.nullOrder text {
  display: block;
  font-size: 30rpx;
  color: #7a7a7a;
  margin-top: 40rpx;
}

.updown {
  display: inline-block;
  width: 0;
  height: 0;
  overflow: hidden;
  font-size: 0;
  line-height: 0;
  border-width:4px;
  border-style: solid dashed dashed dashed; 
  border-color: #222222 transparent transparent transparent;
  margin-top: 10rpx;
  margin-left: 10rpx;
}
