
page {
  background: #f7f7f7;
}

.type {
  color: #6e6e6e;
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  display: block;
}

.item {
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
  background: #fff;
  border-bottom: 1rpx solid #f7f7f7;
}
.nobuy{
  justify-content: flex-start;
}
.nobuyimg{
  margin-right: 38rpx;
}

.itemContent {
  display: flex;
  justify-content: flex-start;
  align-items: flex-start;
  flex-direction: column;
}

.itemContent>text {
  display: flex;
  flex-direction: column;
  color: #c2c2c2;
  font-size: 24rpx;
}

.itemContent>text:first-child {
  color: #303030;
  font-size:32rpx;
  margin-bottom: 10rpx;
  display: inline-block;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 300rpx;
  overflow: hidden;
  font-weight: 600;
}

.item image {
  width: 344rpx;
  height: 178rpx;
  border-radius: 8px;
  margin-right:26rpx; 
}

.itemContent>view {
  width: 108%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  margin-top: 35rpx;
}
.itemContent>.money{
    justify-content: flex-start;

}
 .money>text {
  font-size: 40rpx;
  color: #FA4A11;
}

.goby {
  font-size: 28rpx;
  color: #fff;
  padding: 10rpx 30rpx;
  background: rgba(0, 188, 113, 1);
  border-radius: 30rpx;
}

