/* pages/coupon/pages/orderPage/orderPage.wxss */
.orderPage{
  width: 100%;
  margin-bottom:120rpx; 
}
.couponMess{
  background: #FFFFFF;
  padding:40rpx 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  border-top: 1px solid rgba(230, 230, 230, 0.5);
}
.couponIcon{
  width: 346rpx;
  height: 178rpx;
  border-radius: 8rpx;
  margin-right: 30rpx;
}
.couponName{
  display: flex;
  flex-direction: column;
  height: 178rpx;
}
.couponName>text:nth-child(1){
  color: #303030;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.couponName>text:nth-child(2){
  color: #898989;
  font-size: 24rpx;
}
.scenceItem{
  width: 100%;
  height: 166rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #F7F7F7;
}
.scenceItem:last-child{
  border: 0;
}
.leftBox{
  display: flex;
  align-items: center;
}
.leftBox>image{
  width: 92rpx;
  height: 92rpx;
  margin-right: 30rpx;
}
.leftMess,.rightBox{
  display: flex;
  flex-direction: column;
}
.leftMess .name{
  color: #303030;
  font-size: 28rpx;
  margin-bottom: 8rpx;
  font-weight: 600;
}
.leftMess .times{
  color: #9F9F9F;
  font-size: 28rpx;
}
.number{
  color: #898989;
  font-size: 24rpx;
  margin-bottom: 10rpx;
  text-align: right;
}
.price{
  color: #FA4A11;
  font-size: 28rpx;
}
.scenceList{
  background:#ffffff;
  padding:0 30rpx; 
  margin-bottom: 20rpx;
}
.orderPrice{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  background:#ffffff;
}
.orderPrices{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background:#ffffff;
  padding-top:26rpx;
}
.orderPrice>text:nth-child(1){
  color: #303030;
  font-size: 28rpx;
  margin-left: 30rpx;
}
.orderPrice>text:nth-child(2){
  color: #303030;
  font-size: 28rpx;
  margin-right: 30rpx;
}
.bottomBox{
  width: 100%;
  height: 120rpx;
  background: #FFFFFF;
  border-top: 1px solid #E5E5E5;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  bottom: 0;
}
.priceBottom{
  color: #070707;
  font-weight: 600;
  margin-left: 30rpx;
}
.bottomBox>text{
  width: 320rpx;
  height: 72rpx;
  border-radius: 40rpx;
  background: #21C483;
  color: #ffffff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}
.payIcon{
  width: 32rpx;
  height: 32rpx;
  margin-top:4rpx;
}
.orderPayStyle{
  margin-right: 30rpx;
  display: flex;
  align-items: center;
}
.orderPayStyle text{
color: #303030;
font-size: 28rpx;
margin-right: 10rpx;
}
.remindBox{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:30rpx 0;
}
.scenceIcon{
  display: flex;
  align-items: center;
}
.couponImg{
  width: 32rpx;
  height: 32rpx;
  margin-right:30rpx; 
}
.bg{
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  position: absolute;
  top:0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}
.courseBox{
  width: 650rpx;
  height: 830rpx;
  background: #ffffff;
  border-radius: 16rpx

}
.courseTop{
  width: 570rpx;
  padding: 40rpx;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.leftBtn{
  display: flex;
  flex-direction: column;
}
.leftBtn>text:nth-child(1){
  color: #303030;
  font-size: 42rpx;
  font-weight: 600;
}
.leftBtn>text:nth-child(2){
  color: #303030;
  font-size: 28rpx;
}
.courseTop>image{
  width: 32rpx;
  height: 32rpx;
}
.courseContent{
  width: 650rpx;
  height:652rpx;
  display: flex;
  align-items: center;
  justify-content: center; 
  flex-direction: column;
}
.courseContent>image{
  width: 410rpx;
  height: 466rpx;
  margin-top: 60rpx;
  margin-bottom: 40rpx;
}
.courseContent>text{
  color: #303030;
  font-size: 28rpx;
  margin-bottom: 44rpx;
}
.checkScence{
  width: 100%;
  height:120rpx;
  border-top: 1px solid  #E5E5E5;
  position: fixed;
  bottom: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background: #ffffff;
}
.checkScence>text{
  width: 212rpx;
  height: 76rpx;
  border-radius: 40rpx;
  border:1px solid #E5E5E5;
  text-align: center;
  line-height: 76rpx;
  color: #303030;
  font-size: 32rpx;
  margin-right: 30rpx;
}
.priceBox{
  background: #ffffff;
  padding: 30rpx;
}
.priceItem{
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.priceItem:last-child{
  margin-bottom: 0;
}
.priceItem>span:nth-child(1){
  color: #303030;
  font-size: 28rpx;
}
.priceItem>span:nth-child(2){
    color: #EE0100;
  font-size: 28rpx;
}