/* pages/coupon/pages/payStyle/payStyle.wxss */
.weChatPay{
  width: 100%;
  height: 160rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #ffffff;
}
.payLeft{
  margin-left: 30rpx;
  display:flex;

}
.weChatIcon{
  width: 72rpx;
  height: 72rpx;
  margin-right: 30rpx;
}
.messBox{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.messBox>text:nth-child(1){
 color: #000000;
 font-size: 28rpx;

}
.messBox>text:nth-child(2){
 color: #9F9F9F;
 font-size: 24rpx;
 
}
.checkIcon{
  width: 36rpx;
  height: 36rpx;
  margin-right: 30rpx;
}
.cardList{
  background: #ffffff;
  padding:30rpx;
}
.cardListTitle{
  margin-bottom: 34rpx;
  color: #000000;
  font-size: 24rpx;
}
.cardIcon{
  width: 138rpx;
  height: 72rpx;
  margin-right: 30rpx;
  border-radius: 8rpx;
}
.cardItem{
  width:100%;
  display:flex;
  justify-content:space-between;
  align-items:center;
  background:#ffffff;
  margin-bottom: 36rpx;
}
.cardItem:last-child{
  margin-bottom:0;
}