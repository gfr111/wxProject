
/* pages/groupclassDetail/groupclassDetail.wxss */

page {
  background: #f7f8f9;
}

.ordered {
  padding: 10rpx 28rpx;
  background: rgba(250, 250, 250, 0.5);
  color: #00bc71;
  font-size: 24rpx;
  position: absolute;
  right: 0;
  margin-right: 30rpx;
  margin-top: 40rpx;
  border-radius: 25rpx;
}

.img {
  width: 750rpx;
  height: 386rpx;
  background: rgba(250, 247, 247, 0.8);
  margin-bottom: 0;
}
.mask{
  position: absolute;
    width: 750rpx;
  height: 386rpx;
  background:rgba(0, 0, 0, 0.2);
}
.content {
  padding: 30rpx;
  margin-top: -6rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.title {
  border-bottom: 1rpx solid #ececec;
  padding-bottom: 40rpx;
}

.title>text {
  color: #303030;
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.title view text {
  display: inline-block;
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  color: #fff;
}

.title view text:last-child {
  margin-left: 10rpx;
  background: #e2e2e2;
  color: #6e6e6e;
}

.tag {
  margin-top: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
}

.tag>text {
  color: #383838;
  font-size: 28rpx;
  margin-right: 40rpx;
  font-weight: 600;
}

.tag>text:last-child {
  color: #6e6e6e;
  font-weight: 400;
}

.tagtime {
  justify-content: flex-start;
  align-items: flex-start;
}

.tagright view {
  margin-bottom: 20rpx;
}

.tagright {
  color: #6e6e6e;
  font-weight: 400;
  font-size: 28rpx;
}

.describle {
  padding: 30rpx;
  background: #fff;
}

.describle view {
  color: #383838;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.describle text {
  color: #6e6e6e;
  font-size: 28rpx;
}

.confirm-button {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  border-top: 1rpx solid #e5e5e5;
  background: #fff;
  padding: 22rpx;
  box-sizing: border-box;
}

.confirm-button text {
  width: 100%;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  display: inline-block;
  text-align: center;
  padding: 14rpx;
  box-sizing: border-box;
}

.confirm-button .submit {
  background: rgba(255, 102, 102, 1);
}
.gobys{
background: #00BC71;
}
.noopen {
  background: #bdbdbd;
}

