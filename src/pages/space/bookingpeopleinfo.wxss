/* pages/space/bookingpeopleinfo.wxss */

page {
  height: 100%;
  position: relative;
  font-family: -apple-system-font, Helvetica Neue, Helvetica;
  background-color: #F7F8F9;
  border-top: 1rpx solid #F7F8F9;
}

.main_view {
  width: 100%;
  height: 100%;
  background-color: #F7F8F9;
}

.main_view .input_view{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 20rpx solid #F7F8F9;
  text-indent: 30rpx;
  color: #000;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
}

.input_view input{
  height: 100rpx;
  width: 70%;
  line-height: 100rpx;
  text-align: left;
  margin-left: 60rpx;
}

.main_view .foot_view{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  line-height: 120rrpx;
  border-top: 1rpx solid #E5E5E5;
  background-color: #fff;
}

.foot_view .sure{
  width: 94%;
  height: 72rpx;
  line-height: 72rpx;
  margin: 24rpx 3%;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  font-weight: bold;
  background-color: #00BC71;
  border-radius: 40rpx;
}