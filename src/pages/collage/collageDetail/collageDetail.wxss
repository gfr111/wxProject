}
.clearfix::after {
    content: ".";
    clear: both;
    display: block;
    overflow: hidden;
    font-size: 0;
    height: 0;
}
.joinCollage{
  background: #ffffff;
  padding-top:22rpx;
  padding-bottom: 82rpx;
  position: relative;
  margin-bottom: 16rpx;
}
.joinCollageTitle{
  width: 100%;
  text-align: center;
  display: inline-block;
  font-size: 26rpx;
  color: #222222;
  margin-bottom: 18rpx;
}
.lineLeft{
  display: inline-block;
  width: 200rpx;
  height: 2rpx;
  background: #f2f2f2;
  margin-left: 64rpx;
}
.lineRight{
  display: inline-block;
  width: 200rpx;
  height: 2rpx;
  background: #f2f2f2;
}
.joinCollageTime text:nth-child(2){
  margin-left:34rpx;
  margin-right:40rpx;
  font-size: 24rpx;
  color: #7a7a7a;
}
.joinCollageTime{
  margin-bottom: 76rpx;
}
.joinCollagePicList{
  padding:0 5%;
  padding-right: 0;
justify-content:space-between;
width:95%;
display:flex;
flex-direction:row;
}
.joinCollagePicList image{
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
}
.collageSuccess{
  width: 134rpx;
  height: 134rpx;
  position: absolute;
  bottom:20rpx;
  right: 20rpx;
}
.moreCollage{
  background: #ffffff;
  margin-bottom:16rpx; 
}
.moreCollageTitle{
 line-height: 80rpx;
 font-size: 26rpx;
 border-bottom: 1px solid #f2f2f2;
 padding-left: 40rpx;
 display: block;
}
