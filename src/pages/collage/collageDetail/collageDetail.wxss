.collageDetailTop{
  background: #ffffff;
   margin-top: 1px;
   padding-top: 34rpx;
   padding-left: 30rpx;
   position: relative;
   margin-bottom: 16rpx;
}
.detailTopImg{
  width: 204rpx;
  height: 128rpx;
  float: left;
  margin-right: 32rpx;
  margin-bottom: 40rpx;
}
.detailTopName{
  font-size: 30rpx;
  color: #222222;
  margin-right: 12rpx;
}
.collageNum{
 width: 84rpx;
 height: 34rpx;
 background: #00bc71;
 color: #fff;
 text-align: center;
 line-height: 34rpx; 
 font-size: 20rpx;
 display: inline-block;
}
.collageNewPriceIcon{
  font-size: 24rpx;
