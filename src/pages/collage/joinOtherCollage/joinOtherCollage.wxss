  right:16rpx;
  top:78rpx;
}
.clearfix::after {
    content: ".";
    clear: both;
    display: block;
    overflow: hidden;
    font-size: 0;
    height: 0;
}
.joinCollage{
  background: #ffffff;
  padding-top:22rpx;
  padding-bottom: 54rpx;
  position: relative;
  border-bottom: 16rpx solid #f2f2f2;
}
.joinCollageTitle{
  width: 100%;
  text-align: center;
  display: inline-block;
  font-size: 26rpx;
  color: #222222;
  margin-bottom: 18rpx;
}
.lineLeft{
  display: inline-block;
  width: 200rpx;
  height: 2rpx;
  background: #f2f2f2;
  margin-left: 64rpx;
}
.lineRight{
  display: inline-block;
  width: 200rpx;
  height: 2rpx;
  background: #f2f2f2;
}
.joinCollageTime text:nth-child(2){
  margin-left:34rpx;
  margin-right:40rpx;
  font-size: 24rpx;
  color: #7a7a7a;
}
.joinCollageTime{
  margin-bottom: 76rpx;
}
.joinCollagePicList{
   padding-right: 0;
   text-align: center;
   height: 120rpx;
   overflow: hidden;
   width: 98%;
   padding-left: 2%;
}
.photos{
  width: 112rpx;
  height: 112rpx;
  border-radius: 50%;
  margin-right:28rpx;

}
.collageSuccess{
  width: 134rpx;
  height: 134rpx;
  position: absolute;
  bottom:20rpx;
  right: 20rpx;
}
.moreCollage{
  background: #ffffff;
  margin-bottom:16rpx; 
}
.moreCollageTitle{
 line-height: 80rpx;
 font-size: 26rpx;
 border-bottom: 1px solid #f2f2f2;
 padding-left: 40rpx;
 display: block;
}
/* 底部滚动列表  */
.right-item {
    height: 100%;
    width: 100%;
    box-sizing: border-box;
}
.avater{
  width: 84rpx;
  height: 84rpx;
  border-radius: 50%;
  margin-left: 28rpx;
  display: inline-block;
  margin-right: 28rpx;
  font-size: 0;
}
.collageMess{
  display: inline-block;
  position: relative;
  top:-7rpx;
}
.collageMess text{
  display: block;
}
.collageMess text:nth-child(1){
  font-size: 30rpx;
  color: #222222;
  /* margin-top: 7rpx; */
}
.collageMess text:nth-child(2){
  font-size: 26rpx;
  color: #ababab;
}
.goToCollage{
  display: inline-block;
  float: right;
  margin-right: 46rpx;
  cursor: pointer;
}
.goToCollage text{
  display: block;
}
.goToCollage text:nth-child(1){
  display: block;
  width: 140rpx;
  height: 52rpx;
  border: 1px solid #00bc71;
  border-radius: 28rpx;
  color: #00bc71;
  font-size: 24rpx;
  text-align: center;
  line-height: 52rpx;
  margin-top: 3rpx;
}
.goToCollage text:nth-child(2){
  font-size: 20rpx;
  color: #7a7a7a;
  text-align: center;
  width: 140rpx;
}
