/* pages/collage/collageDetail/collageDetail.wxss */
.collageDetailTop{
  background: #ffffff;
   margin-top: 1px;
   padding-top: 34rpx;
   padding-left: 30rpx;
   position: relative;
   border-bottom: 16rpx solid #f2f2f2;
}
.detailTopImg{
  width: 204rpx;
  height: 128rpx;
  float: left;
  margin-right: 32rpx;
  margin-bottom: 40rpx;
}
.detailTopName{
  font-size: 30rpx;
  color: #222222;
  margin-right: 12rpx;
}
.collageNum{
 width: 84rpx;
 height: 34rpx;
 background: #00bc71;
 color: #fff;
 text-align: center;
 line-height: 34rpx; 
