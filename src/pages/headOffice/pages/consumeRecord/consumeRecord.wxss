/* pages/expenseDetail/expenseDetail.wxss */

page {
  background: #fff;
}

.header {
  background: #2e2e2e;
  color: #f3d2ae;
  font-size: 40rpx;
  font-weight: 600;
  padding: 30rpx 40rpx;
}

.money {
  margin-top: 20rpx;
  font-size: 66rpx;
}

.money text:last-child {
  margin-left: 14rpx;
  font-size: 28rpx;
}

.content {
  padding: 40rpx;
}

.choose {
  display: flex;
  flex-direction: row;
  color: #303030;
  font-size: 30rpx;
  font-weight: 400;
  margin-bottom: 40rpx;
}

.choose view {
  padding-right: 50rpx;
}

/* .choose view text {
  margin-right: 10rpx;
} */

.gochoose {
  position: relative;
  top: -8rpx;
  display: inline-block;
  transform: rotate(45deg);
  width: 16rpx;
  height: 18rpx;
  border-bottom: 2rpx solid #303030;
  border-right: 2rpx solid #303030;
  margin-left: 10rpx;
}

.list {
  /* height: 500rpx; */
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  box-shadow: 0px 1px 5px 0px rgba(0, 0, 0, 0.1);
  border-radius: 8px;
  padding: 0 30rpx 30rpx 0;
  margin-bottom: 30rpx;
}

.time {
  display: flex;
  align-items: flex-start;
  margin-bottom: 30rpx;
}
.typeclass{
  margin-right: 10rpx;
}

.time text {
  font-size: 24rpx;
  font-weight: 400;
  color: #b8b8b8;
}

.time text:first-child {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 35px;
  height: 18px;
  background: rgba(205, 167, 110, 1);
  border-radius: 8px 0px 8px 0px;
  font-size: 26rpx;
  color: #fff;
  margin-right: 20rpx;
  padding: 4rpx 6rpx;
}

.time text:last-child {
  margin-top: 2rpx;
}

.describ {
  display: inline-block;
  width: 460rpx;
  color: #353535;
  font-size: 32rpx;
  margin-left: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.alldes{
    display: inline-block;
  width: 460rpx;
  color: #353535;
  font-size: 32rpx;
  margin-left: 50rpx;
}

.spendMoney {
  margin-top: 30rpx;
  font-size: 42rpx;
  /* display: flex;
  justify-content: center;
  align-items: center; */
}

.tpyeofmodel {
  background: rgba(255, 255, 255, 1);
  width: 100%;
  position: fixed;
  bottom: 0;
  z-index: 10;
}

.margin {
  margin-left: 0;
}

.close {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #303030;
  font-size: 30rpx;
  margin: 30rpx 0;
}

.close image {
  position: absolute;
  right: 30rpx;
  width: 32rpx;
  height: 32rpx;
}

.typeof {
  margin-top: 20rpx;
  padding: 0 26rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}

.typeof text {
  width: 156rpx;
  height: 124rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #6e6e6e;
  font-size: 34rpx;
  background: #fafafa;
  margin: 8rpx 9rpx;
  border-radius: 8rpx;
}

.cancel {
  border-top: 20rpx solid #f7f8f9;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 28rpx 0;
  color: #303030;
  font-size: 32rpx;
}

.cover {
  position: absolute;
  height: 100vh;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: #000;
  opacity: 0.6;
}

.empty {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  color: rgb(204, 204, 204);
  font-size: 28rpx;
  margin-top: 30rpx;
}

.empty image {
  width: 272rpx;
  height: 304rpx;
}

.typeof .colors {
  background: #00bc71;
  color: #fff;
}

.time  .color1 {
  background: #cd7e6e;
}

.time  .color2 {
  background: #6e7acd;
}

.smallmoney {
  font-size: 28rpx;
  margin-left: 5rpx;
  margin-top: 40rpx;
}
.allmoney{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: row;
  color: #303030;
}
.moneycolor{
  color: #EEB026
}
.notall{
  color: #12C48B;
  font-size: 24rpx;
  margin-left: 50rpx;
}
.moreBtnBox {
  display: flex;
  width: 100%;
  align-items: center;
  justify-content: center;
  margin: 20rpx 0;
  color: #808080;
  font-size: 28rpx;
}