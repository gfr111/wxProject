/* pages/headOffice/pages/officeMap/officeMap.wxss */
.map_container{
  position: absolute;
  top: 120rpx;
  bottom: 0;
  left: 0;
  right: 0;
}
.map{
  width: 100%;
  height: 100%;
}
.map_text{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0px;
  height: 80px;
  background: #fff;
  padding: 0 15px;
}
text{
  margin: 5px 0;
  display: block;
  font-size:12px;
}
.h1{
  margin: 15px 0;
  font-size:15px;
}
.officeMess{
  position: absolute;
  bottom: 0;
  background: #ffffff;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  width: 100%;
}
.topBox{
  display: flex;
  justify-content: space-between;
  flex-direction: row;
  align-items: center;
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  padding: 20rpx;
}
.topBox>image:nth-child(1){
  border:4rpx solid #ffffff;
  width:72rpx;
  height:72rpx;
  margin-left:30rpx;
  margin-top: -74rpx;
  border-radius: 50%;
}
.topBox>image:nth-child(2){
  width:40rpx;
  height:40rpx;
}
.officeName{
  color: #303030;
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  margin-left: 40rpx;
}
.officeAdress{
  color: #757575;
  font-size: 24rpx;
  margin-bottom: 30rpx;
  margin-left: 40rpx;
}
.detailBox{
  padding: 24rpx 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1px solid #F1F3F4;
}
.detailBtn{
  display: flex;
  align-items: center;
}
.detailBtn>image{
  width: 28rpx;
  height: 28rpx;
  margin-right: 20rpx;
}
.detailBtn span{
  color: #303030;
  font-size: 28rpx;
}
.mapBox{
   display: flex;
  width:126rpx;
  height:50rpx;
  background:rgba(0,188,113,1);
  border-radius:24rpx; 
  justify-content: center;
  align-items: center;
}
.mapBox>image{
  width: 28rpx;
  height: 28rpx;
}
.mapBox span{
  font-size: 24rpx;
  color: #ffffff;
}
.searchBox{
  padding:20rpx 30rpx; 
  background: #ffffff;
  display: flex;
  height:80rpx;
  align-items: center;
  box-shadow:0px 0px 5px 2px rgba(0,0,0,0.1);
  justify-content: center;
}
.search{
 background: #F5F5F5;
 border-radius: 40rpx;
 display: flex;
 align-items: center;
 width: 100%;
 padding: 20rpx;
 position: relative;
}
.search>image{
  width: 32rpx;
  height: 32rpx;
}
.search>input{
  font-size: 28rpx;
  padding-left: 20rpx;
  width: 460rpx;
}
.search>span{
  width:106rpx;
  height: 62rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #00BC71;
  color: #ffffff;
  font-size: 28rpx;
  position: absolute;
  right: 10rpx;
}
.searchContrain{
  height: 100%;
  overflow: hidden;
}
.searchList{
  width: 100%;
  height: 90%;
  overflow-y: scroll;
  background: #ffffff;
}
.searchItem{
  line-height: 80rpx;
  color: #303030;
  font-size: 28rpx;
  padding-left: 36rpx;
}
.locationIcon{
  width: 68rpx;
  height: 68rpx;  
  position: fixed;
  right:20rpx;
}