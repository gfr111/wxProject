.activityBox{
  left: 0;
  top: 0;
  width: 100%;
  height: auto;
  padding-bottom: 100rpx;
  background-color: #fff;
}
.swiper{
  width:100%;
  height:386rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}
.name_view{
  margin: 0 30rpx;
  height: 136rpx;
  line-height: 100rpx;
  color: #303030;
  font-size: 40rpx;
  font-weight: bold;
  background: #fff;
  border-bottom: 2rpx solid #ECECEC;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}
.name_view>text{
  text-align: left;
  width: 90%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: bold;
}
.name_view>image{
  position: absolute;
  right: 30rpx!important;
  width: 40rpx;
  height: 40rpx;
}
.name_view>button{
  position: absolute;
  right: 0!important;
  width: 130rpx;
  height: 100rpx;
  background-color: transparent;
}
.name_view>button::after{
  border: none;
}
.time{
  /* line-height: 80rpx; */
  font-size: 28rpx;
  /* padding-left: 30rpx; */
  /* border-bottom: 2rpx solid #cfcfcf; */
  background: #fff;
  margin: 40rpx 30rpx 0 30rpx;
  color: #6E6E6E;
  font-weight: 400;
}
.time>text{
  color: #383838;
  font-weight: 600;
  padding-right: 68rpx;
}
.time image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 12rpx;
  position:relative;
top:1px;

}
.address{
  margin: 20rpx 30rpx 0 30rpx;
  /* line-height: 80rpx; */
  font-size: 28rpx;
  /* padding-left:19rpx; */
  border-bottom: 2rpx solid #ECECEC;
  background: #fff;
  /* width: 97.5%; */
  overflow: hidden;
  color: #6E6E6E;
  font-weight: 400;
  padding-bottom: 50rpx;
  display: flex;
  flex-wrap: wrap;
}
.address>text{
  /* color: #383838;
  font-weight: 600; */
  padding-right: 68rpx;
}
.address>text:nth-child(2){
  width: 60%;
}
.address image{
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top:16rpx;
}
.price{
  line-height: 80rpx;
  height: 80rpx;
  font-size: 28rpx;
  /* padding-left:30rpx; */
  background: #fff;
  margin: 20rpx 30rpx 30rpx 30rpx;
  border-bottom: 2rpx solid #ECECEC;
  font-weight: 600;
}
.activities{
  margin-top: 30rpx;
  background: #fff;
}
.activities text{
  display: block;
  line-height: 80rpx;
  font-size: 28rpx;
  padding-left: 30rpx;
  border-bottom: 2rpx solid #cfcfcf;
  background: #fff;
  font-weight: bold;
}
.activities view{
  width: 94%;
  margin: 0 auto;
  font-size: 28rpx;
  text-indent: 56rpx;
  padding-top:10rpx;
  padding-bottom: 60rpx;
  overflow-x: hidden;
}
.operation-box{
  background:#f5f5f5;
  font-size: 28rpx;
  width:69rpx;
  height:58rpx;
  line-height:58rpx;
  text-align:center;
  display:inline-block;
  margin-left: 10rpx;
  /* margin-top: -8rpx; */
  color: #030303;
  letter-spacing: 0;
}
.center-info{
  position: fixed;
  width: 94%;
  bottom: 0;
  margin-bottom: 0;
  margin-top: 0;
  padding:32rpx;
  line-height:60rpx;

}
.signUp{
  display: inline-block;
  float: right;
  width: 160rpx;
  height: 60rpx;
  background: #00BC71;
  text-align: center;
  line-height:60rpx;
  color: #fff;
  border-radius: 8rpx;
}
.unSignUp{
  display: inline-block;
  float: right;
  width: 160rpx;
  height: 60rpx;
  background: #ddd;
  text-align: center;
  line-height:60rpx;
  color: #fff;
  border-radius: 8rpx;
}
